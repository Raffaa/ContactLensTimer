<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/lenslayout_general_padding">
    <TextView
        android:id="@+id/lens_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/lens_icon_dimen"
        android:layout_height="@dimen/lens_icon_dimen"
        app:srcCompat="@drawable/ic_contact_lens"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/lens_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/remaining_days_dimen"/>
    <TextView
        android:id="@+id/lens_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
    <com.raffynato.contactlenstimer.BarChart
        android:layout_marginTop="@dimen/barchart_vertical_margin"
        android:layout_marginBottom="@dimen/barchart_vertical_margin"
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:BarHeight="@dimen/barhcart_height"
        app:containerBarColor="#80c1d5e0"
        app:progressBarColor="@color/colorAccent"
        app:showText="false"/>
</LinearLayout>