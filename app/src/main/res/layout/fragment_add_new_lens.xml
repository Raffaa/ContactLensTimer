<?xml version="1.0" encoding="utf-8"?>
<com.raffinato.contactlensreminder.PullToDismiss xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="6dp">

        <co.ceryle.segmentedbutton.SegmentedButtonGroup
            android:id="@+id/segmentedcontrols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:sbg_animateSelector="accelerateDecelerate"
            app:sbg_animateSelectorDuration="350"
            app:sbg_backgroundColor="@android:color/white"
            app:sbg_dividerColor="@color/boringGrey"
            app:sbg_dividerPadding="10dp"
            app:sbg_dividerRadius="10dp"
            app:sbg_dividerSize="1dp"
            app:sbg_position="0"
            app:sbg_radius="3dp"
            app:sbg_ripple="true"
            app:sbg_rippleColor="@color/almostBlue"
            app:sbg_selectorColor="@color/colorAccent"
            app:sbg_borderColor="@color/boringGrey"
            app:sbg_borderSize="1dp"
            app:sbg_draggable="false">

            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                app:sb_text="@string/anl_switch_left"
                app:sb_textColor="@color/colorPrimaryDark"
                app:sb_textColor_onSelection="@android:color/white"/>

            <co.ceryle.segmentedbutton.SegmentedButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                app:sb_text="@string/anl_switch_right"
                app:sb_textColor="@color/colorPrimaryDark"
                app:sb_textColor_onSelection="@android:color/white"/>
        </co.ceryle.segmentedbutton.SegmentedButtonGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/anl_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/anl_switch_txt"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/add_new_left_lens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/datepicker_lx"
                    android:text="@string/anl_datepicker_desc" />

                <com.github.badoualy.datepicker.DatePickerTimeline
                    android:id="@+id/datepicker_lx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mti_bgLblDateSelectedColor="@color/colorAccent"
                    app:mti_lblDateColor="@color/almostBlue"
                    app:mti_ringLblDateSelectedColor="@color/almostBlue"
                    app:mti_tabBeforeSelectionColor="@color/almostBlue"
                    app:mti_tabSelectedColor="@color/colorAccent"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/spinner_lx"
                    android:text="@string/anl_combo_desc" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_lx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_new_right_lens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/datepicker_rx"
                    android:text="@string/anl_datepicker_desc" />

                <com.github.badoualy.datepicker.DatePickerTimeline
                    android:id="@+id/datepicker_rx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mti_bgLblDateSelectedColor="@color/colorAccent"
                    app:mti_lblDateColor="@color/almostBlue"
                    app:mti_ringLblDateSelectedColor="@color/almostBlue"
                    app:mti_tabBeforeSelectionColor="@color/almostBlue"
                    app:mti_tabSelectedColor="@color/colorAccent" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/spinner_rx"
                    android:text="@string/anl_combo_desc" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_rx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.raffinato.contactlensreminder.PullToDismiss>